<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
            android:layout_width="312dp"
            android:layout_height="102dp"
            android:id="@+id/imgView" android:layout_weight="1" app:srcCompat="@drawable/clear"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="102dp" android:layout_weight="1" android:paddingTop="10dp">
        <TextView
                android:layout_width="218dp"
                android:layout_height="wrap_content" android:id="@+id/txtDate" android:paddingLeft="10dp"
                android:layout_marginLeft="20dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingTop="15dp">
            <TextView
                    android:text="Min :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                    android:paddingLeft="20dp" android:width="1dp"/>
            <TextView
                    android:layout_width="102dp"
                    android:layout_height="wrap_content" android:id="@+id/txtMin" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:paddingTop="15dp">
            <TextView
                    android:text="Max :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                    android:paddingLeft="20dp" android:width="1dp"/>
            <TextView
                    android:layout_width="103dp"
                    android:layout_height="wrap_content" android:id="@+id/txtMax" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>